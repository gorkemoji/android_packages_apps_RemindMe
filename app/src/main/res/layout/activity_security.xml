<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.SecurityActivity">

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:src="@drawable/ic_lock"
        android:contentDescription="@string/lock_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/app_accent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="@string/security_type"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/lockIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bioIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/ic_fingerprint"
        android:contentDescription="@string/bio_icon"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/app_accent" />

    <TextView
        android:id="@+id/bioTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="82dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/biometrics"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/bioIcon" />

    <ImageView
        android:id="@+id/pinIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:src="@drawable/ic_pin"
        android:contentDescription="@string/pin_icon"
        app:layout_constraintTop_toBottomOf="@id/bioIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/app_accent" />

    <TextView
        android:id="@+id/pinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/pin"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/bioTitle"
        app:layout_constraintStart_toEndOf="@id/pinIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>