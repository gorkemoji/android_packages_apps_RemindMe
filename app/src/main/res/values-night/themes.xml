<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemindMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/app_accent</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_accent</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/app_accent</item>
        <item name="android:windowBackground">@color/black</item>
        <!-- Ensure light-colored status bar icons -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardViewStyle">@style/CardStyle.Blue</item>
    </style>
    <style name="Theme.RemindMe.Red" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/red</item>
        <item name="android:navigationBarColor">@color/red</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="cardViewStyle">@style/CardStyle.Red</item>
    </style>
    <style name="Theme.RemindMe.Green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/green</item>
        <item name="android:navigationBarColor">@color/green</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="cardViewStyle">@style/CardStyle.Green</item>
    </style>
    <style name="Theme.RemindMe.Yellow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:navigationBarColor">@color/yellow</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="cardViewStyle">@style/CardStyle.Yellow</item>
    </style>
    <style name="CardStyle.Blue" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/blue_card_background</item>
    </style>
    <style name="CardStyle.Red" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/red_card_background</item>
    </style>
    <style name="CardStyle.Green" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/green_card_background</item>
    </style>
    <style name="CardStyle.Yellow" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/yellow_card_background</item>
    </style>
</resources>