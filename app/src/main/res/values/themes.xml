<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RemindMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/app_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorSecondaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Ensure light-colored status bar icons -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@color/cardview_light_background</item>
    </style>
    <style name="TimePickerStyle" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>